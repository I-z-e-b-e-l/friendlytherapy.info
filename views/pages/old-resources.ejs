    <div class="center-me">
      <button onclick="displayAddResourceForm()" id="show-resources-form-button">Suggest a Resource</button>  
    </div>
    



    <div class="center-me">
        <div class="resource-form-div">

            <form class="forms-all contact-form" id="add-resource-form" method="POST" action="/contact" enctype = "multipart/form-data">

                <div class="resource-question">
                    <label for="resource_name" class="contact-form-content resource-form-content form-label">Name of resource:</label>
                    <input type="text" name="resource_name" class="contact-form-content resource-form-content resource-input" required>
                </div>

                <div class="resource-question">
                    <label for="resource_link" class="contact-form-content resource-form-content form-label">Link:</label>
                    <input type="text" name="resource_link" class="contact-form-content resource-form-content resource-input">
                </div>

                <div class="resource-question">
                    <label for="resource_info" class="contact-form-content resource-form-content form-label">Any info you want to share:</label>
                    <textarea name="resource_info" class="contact-form-content resource-form-content resource-input" rows="6"></textarea>
                </div>

                <div class="resource-question">
                    <label for="resource_know" class="contact-form-content resource-form-content form-label">How do you know about this resource?:</label>
                    <input type="text" name="resource_know" class="contact-form-content resource-form-content resource-input" placeholder="Have you used it yourself? Are you professionally connected?">
                </div>
    
                <div class="center-me">
                    <input type="submit" onclick="displayThankYouResource()">
                </div>
    
                <p id="thank-you-resource">
                    <em>Thank you for contributing! Your resourse suggestion will be reviewed!</em>
                </p>
    
            </form>
        </div>
                
    </div>

    









